.scenic-container {
  min-height: 100%;
  position: relative;
  background-color: #eee;
}

.back-button-box {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 100;
  box-shadow: 0px 0px 15px rgba(204, 204, 204, 0.47);
  background: white
}

.back-button {
  position: absolute;
  height: 30px;
  width: 30px;
  bottom: 8px;
  left: 10px;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.swiper-item {
  height: 200px;
}

.swiper-image {
  height: 200px;
  width: 100%;
}

.scenic-info {
  padding: 20px;
  background-color: rgba(238, 238, 238, 0.49);
  border-top: 1px solid #ddd
}

.scenic-name {
  font-size: 30px;
  font-weight: bolder;
}

.scenic-tag {
  background: orange;
  padding: 3px 8px;
  display: inline-block;
  border-radius: 12px;
  margin-top: 5px;
}

.card-info {
  height: 60px;
  background: white;
  margin-top: 12px;
  display: flex;
  align-items: center;
  box-shadow: 2px 2px 4px 0px rgba(229, 229, 229, 0.25), -2px -2px 4px 0px rgba(229, 229, 229, 0.25);
}

.card-icon {
  height: 24px;
  width: 24px;
  padding: 0 20px;
}

.card-text {
  flex: 1;
  font-size: 14px;
  color: rgba(128, 128, 128, 1);
}
.card-clock-icon {
  width: 90px;
  height: 60px;
}

.card-button {
  font-size: 14px;
  color: orange;
  width: 75px;
}

.scenic-history {
  margin-top: 12px;
}

.info-title {
  font-size: 16px;
  font-weight: bolder;
}

.info-text {
  margin-top: 10px;
  color: rgba(166, 166, 166, 1);
  font-size: 12px;
}

.info-audio {
  margin-top: 10px;
}
