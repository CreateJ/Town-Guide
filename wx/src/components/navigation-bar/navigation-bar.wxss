.nav-bar {
    position: fixed;
    width: 100%;
    top: 0;
    color: #fff;
    background: #000;
}

.nav-bar .search {
    width: 60%;
    color: #333;
    font-size: 14px;
    background: #fff;
    position: absolute;
    border-radius: 50px;
    background: #ddd;
    padding-left: 14px;
}


.button-box {
    position: absolute;
    width: 200px;
}

.button-box .header-button {
    display: inline-block;
    width: 32px;
    height: 32px;
    border: none;
    padding: 0;
    border-radius: 50%;
    margin-left: 7px;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}
