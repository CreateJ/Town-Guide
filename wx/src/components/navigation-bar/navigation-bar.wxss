.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  background: white;
}

.nav-bar .search {
  width: 60%;
  color: #333;
  font-size: 14px;
  background: #fff;
  position: absolute;
  border-radius: 50px;
  background: #ddd;
  padding-left: 14px;
}


.button-box {
  position: absolute;
  width: 200px;
}

.button-box .header-button {
  display: inline-block;
  width: 32px;
  height: 32px;
  border: none;
  padding: 0;
  border-radius: 50%;
  margin-left: 7px;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.categories-box {
  position: absolute;
  width: 100%;
  background: white;
  color: black;
  height: 30px;
  display: flex;
}

.category-item {
  width: 50px;
  height: 80px;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.categories-image {
  width: 24px;
  height: 24px;
}
