.clock-container {
  position: relative;
  background-color: #eee;
}

.back-button-box {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 100;
  box-shadow: 0px 0px 15px rgba(204, 204, 204, 0.47);
  background: white
}

.back-button {
  position: absolute;
  height: 30px;
  width: 30px;
  bottom: 8px;
  left: 10px;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.mine-header {
  display: flex;
  height: 140px;
  justify-content: space-between;
  align-items: center;
  padding: 10px 24px;
}

.avatar {
  height: 80px;
  width: 80px;
  border-radius: 50%;
}

.mine-header .login-button {
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info {
  height: 100%;
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-end;
  justify-content: center;
}

.user-name {
  font-size: 32px;
  font-weight: bolder;
  margin-bottom: 10px;
}

.tab-type {
  display: flex;
  align-items: flex-end;
  padding: 0 20px;
}

.tab-text {
  font-size: 18px;
  margin-right: 20px;
  color: grey;
  font-weight: bolder;
}


.tab-text.active {
  font-size: 24px;
  color: black;
  border-bottom: 2px solid rgba(158, 223, 242, 1);
}

.scenic-list {
  padding: 0 20px;
}

.scenic-item {
  background-color: white;
  position: relative;
  height: 120px;
  border: 1px solid orange;
  border-bottom-left-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}

.scenic-clock-icon {
  position: absolute;
  right: -5px;
  top: -5px;
  height: 60px;
  width: 90px;
}

.scenic-icon {
  background-color: black;
  height: 118px;
  width: 118px;
  border-bottom-left-radius: 20px;
}

.scenic-info {
  flex: 1;
  margin-left: 5px;
}

.scenic-text {
  overflow: hidden;
  text-overflow: ellipsis;
  /*white-space: nowrap;*/
  max-height: 40px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.scenic-name {
  font-size: 16px;
  font-weight: bolder;
}

.scenic-sub-info {
  font-size: 10px;
  color: rgba(128, 128, 128, 1);
}

.scenic-subtitle {
  color: orange;
}


