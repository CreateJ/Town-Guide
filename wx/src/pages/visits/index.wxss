.visit-container {
  height: 100vh;
  display: flex;
  flex-flow: column nowrap;
  overflow: hidden;
}

.main-container {
  overflow: auto;
}

.scroll-wrap {
  width: 100%;
  overflow: hidden;
}

.categories-list {
  overflow: hidden;
}

.category-item {
  float: left;
  height: 44px;
  width: calc(20% - 2px);
  /*width: 72px;*/
  border-radius: 6px;
  border: 1px solid rgba(237, 237, 237, 1);
  margin-top: 5px;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.category-icon {
  margin-top: 3px;
  height: 24px;
  width: 24px;
}

.category-text {
  font-size: 14px;
  color: rgba(166, 166, 166, 1);
  text-align: center;
}
.point-list {
  flex: 1;
  overflow: auto;
}



.point-item {
  position: relative;
  width: 42%;
  height: 230px;
  float: left;
  margin-top: 20px;
  border-radius: 12px 50px 12px 12px;
  display: flex;
  align-items: center;
  flex-flow: column nowrap;
  justify-content: space-around;
  padding: 20px;
  box-sizing: border-box;
  box-shadow: 2px 2px 4px 0px rgba(229, 229, 229, 1), -2px -2px 4px 0px rgba(229, 229, 229, 1);
  margin-left: 5%;
}

.point-item:last-child {
  margin-bottom: 5%;
}

.point-image {
  height: 120px;
  width: 120px;
  border-radius: 60px;
  border: 3px solid white;
}

.point-name {
  font-size: 16px;
  font-weight: bolder;
  width: 140px;
  overflow: hidden;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.point-location {
  height: 30px;
  width: 140px;
  font-size: 12px;
  color: rgba(128, 128, 128, 1);
  height: 35px;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  /*white-space: nowrap;*/
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.point-category {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 6px 0;
  background: orange;
  padding: 2px 5px;
  color: white;
  font-size: 14px;
}

.point-like {
  position: absolute;
  height: 32px;
  width: 32px;
  right: 0;
  top: 0;
}




